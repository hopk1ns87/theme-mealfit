<div id="content">
  <div class="container">
    {% include 'breadcrumb' %}
    <div class="title clearfix">
      <h1>{{ page.title | escape }}</h1>
    </div>
    <div class="contact_c">

      
      <div class="row">
        <div class="col-sm-6 slideInLeft">
          <div class="infor_c">
            <h5 class="box-heading">{{ 'pages.contact.heading_info_box' | t }}</h5>
            <div class="rte">
              {{ page.content }}
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="con_frm">
            <h5 class="box-heading">{{ 'pages.contact.heading_contact_box' | t }}</h5>
            {% form 'contact' %}
            <div class="frm con_frm_inn">
              <div class="m15">
                {% include 'form-errors-custom' %}
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="lbltxt">I am interested in renting the<span class="req">*</span></div>
                    <select id="i-am-interested-in-renting-the" name="contact[interested in]">
                      <option value="Southern Pride Smoker ($449)">Southern Pride Smoker ($449)</option>
                      <option value="Chocolate Fountain Basic ($399)">Chocolate Fountain Basic ($399)</option>
                      <option value="Chocolate Fountain Premium ($599)">Chocolate Fountain Premium ($599)</option>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="lbltxt">{{ 'contact.form.name' | t }}:<span class="req">*</span></div>
                    <input type="text" id="contactFormName" class="txtbox" name="contact[name]" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
                  </div>
                  <div class="col-sm-6">
                    <div class="lbltxt">{{ 'contact.form.phone' | t }}:<span class="req">*</span></div>
                    <input type="tel" name="contact[phone]" id="contactFormPhone" class="txtbox" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">
                  </div>
                </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="lbltxt">{{ 'contact.form.email' | t }}:<span class="req">*</span></div>
                  <input type="email" name="contact[email]" id="contactFormEmail" class="txtbox" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
                
                </div>
              </div>
              <div class="row">
                
                
                <div class="col-sm-6">
                  <div class="lbltxt">Date of Event<span class="req">*</span></div>
                  <input type="text" name="contact[date]" id="contactFormDate" class="txtbox" value="">
                </div>
                <div class="col-sm-6">
                  <div class="lbltxt">Number of Guests<span class="req">*</span></div>
                  <input type="text" name="contact[guests]" id="contactFormGuests" class="txtbox">
                </div>
                
                
              </div>
              <div class="lbltxt">Delivery Address<span class="req">*</span></div>
              <textarea name="contact[address]" id="contactFormAddress">{% if form.body %}{{ form.body }}{% endif %}</textarea>
              <div class="clearfix frm_bot"><span class="reqired">* {{ 'contact.form.required' | t }}</span></div>
              
              {% if form.posted_successfully? %}
              <div class="alert alert-success m15">
                {{ 'contact.form.post_success' | t }}
              </div>
              {% endif %}
              
              <div class="clearfix frm_bot">
                
                <input type="reset" class="info_btn" value="{{ 'contact.form.clear' | t }}">
                <input type="submit" class="btn_c" value="{{ 'contact.form.send' | t }}">
                
              </div>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Contact page",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_google_map",
        "label": "Enable Google map"
      },
     {
        "type": "header",
        "content": "Text"
      },
      {
        "id": "heading",
        "type": "text",
        "label": "Heading",
        "default": "Store name"
      },
      {
        "id": "address",
        "type": "richtext",
        "label": "Address and hours",
        "default": "<p>123 Fake St.<br>Toronto, Canada</p><p>Mon - Fri, 10am - 9pm<br>Saturday, 11am - 9pm<br>Sunday, 11am - 5pm</p>"
      },
      {
        "id": "map_address",
        "type": "text",
        "label": "Map address",
        "info": "Google Maps will find the exact location",
        "default": "80 Spadina Ave, Toronto"
      },
      {
        "id": "button_text",
        "type": "text",
        "label": "Map link label",
        "default": "Get directions"
      },
      {
        "id": "show_pin",
        "type": "checkbox",
        "label": "Show pin",
        "default": true
      },
      {
        "type": "header",
        "content": "Background"
      },
      {
        "id": "api_key",
        "type": "text",
        "label": "Google Maps API key",
        "info": "You’ll need to [register a Google Maps API Key](https://help.shopify.com/manual/using-themes/troubleshooting/map-section-api-key) to display the map"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Image",
        "info": "Displayed if the map isn’t loaded"
      },
      {
        "type": "select",
        "id": "background_image_position",
        "label": "Image position",
        "default": "center center",
        "options": [
          {
            "label": "Top left",
            "value": "top left"
          },
          {
            "label": "Top center",
            "value": "top center"
          },
          {
            "label": "Top right",
            "value": "top right"
          },
          {
            "label": "Middle left",
            "value": "center left"
          },
          {
            "label": "Middle center",
            "value": "center center"
          },
          {
            "label": "Middle right",
            "value": "center right"
          },
          {
            "label": "Bottom left",
            "value": "bottom left"
          },
          {
            "label": "Bottom center",
            "value": "bottom center"
          },
          {
            "label": "Bottom right",
            "value": "bottom right"
          }
        ]
      }
    ]
  }
{% endschema %}