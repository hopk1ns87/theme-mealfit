{%- comment %}<locksmith:d130>{% endcomment -%}
  {%- if search.results %}{% paginate search.results by 12 %}{% assign locksmith_search__results_count = 0 %}{% for result in search.results %}{% include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: result, locksmith_subject_parent: search %}{% if locksmith_transparent %}{% else %}{% continue %}{% endif %}{% assign locksmith_search__results_count = locksmith_search__results_count | plus: 1 %}{% endfor %}{% endpaginate %}{% endif -%}
{%- comment %}</locksmith:d130>{% endcomment -%}

{% assign product_only_search =  settings.search_type_query %}
{% assign grid_results = true %}


<div id="content">
  <div class="container search-page">
    {% include 'breadcrumb' %}

    {% if search.performed %}
    {% paginate search.results by 12 %}

    {% if locksmith_search__results_count == 0 %}
    <div class="title clearfix">
      <h1>{{ 'general.search.search_heading' | t }}</h1>
    </div>
    <div class="page_content">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="sfbox box-search">
            <div class="rte">
              <p>{{ 'general.search.no_results_html' | t: terms: search.terms }}</p>
              <h2>{{ 'general.search.search_again' | t }}</h2>
              <form action="/search" method="get" role="search">

                <input type="hidden" name="type" value="product">
                <div class="frm">
                  <div class="col-sm-9"><input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.submit' | t }}" class="txtbox" aria-label="{{ 'general.search.submit' | t }}"></div>
                  <div class="col-sm-3"><button class="btn_c" type="submit" value="{{ 'general.search.submit' | t }}">{{ 'general.search.submit' | t }}</button></div>
                </div>
              </form> 
            </div>
          </div>
        </div>
      </div>
    </div>
    {% else %}
    <div class="product_c">
      <div class="row">
        <div class="col-sm-12">
          <div class="title clearfix">
            <h1>{{ 'general.search.search_heading' | t }}</h1>
          </div>
        </div>
      </div>
      <div class="row">
        {% if grid_results == false %}
        <div class="search-list mt20 col-xs-12">
          {% for item in search.results %}
{%- comment %}<locksmith:87d6>{% endcomment -%}
  {%- include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: item, locksmith_subject_parent: search %}{% if locksmith_transparent %}{% else %}{% continue %}{% endif -%}
{%- comment %}</locksmith:87d6>{% endcomment -%}
{%- include 'bold-product' with item, hide_action: 'skip' -%}
          {% include 'search-result' %}
          {% endfor %}
        </div>
        {% else %}
        {% for item in search.results %}
{%- comment %}<locksmith:8200>{% endcomment -%}
  {%- include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: item, locksmith_subject_parent: search %}{% if locksmith_transparent %}{% else %}{% continue %}{% endif -%}
{%- comment %}</locksmith:8200>{% endcomment -%}
{%- include 'bold-product' with item, hide_action: 'skip' -%}
        {% include 'search-result-grid' %}
        {% endfor %}
        {% endif %}
      </div>
      {% endif %}

      {% if paginate.pages > 1 %}
      {% include 'pagination-custom' %}
      {% endif %}

      {% endpaginate %}


      {% else %}

      <div class="title clearfix">
        <h1>{{ 'general.search.placeholder' | t }}</h1>
      </div>
      <div class="page_content search_page_content">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <div class="sfbox box-search">
                <form action="/search" method="get" role="search">
                  {% if product_only_search == "search_products_only" %}
                  <input type="hidden" name="type" value="product">
                  {% endif %}
                  <div class="frm row">
                    <div class="col-sm-9 col-xs-8"><input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.submit' | t }}" class="txtbox" aria-label="{{ 'general.search.submit' | t }}"></div>
                    <div class="col-sm-3 col-xs-4"><button class="btn_c" type="submit" value="{{ 'general.search.submit' | t }}">{{ 'general.search.submit' | t }}</button></div>
                  </div>
                </form> 
            </div>
          </div>
        </div>
      </div>

      {% endif %}    
    </div>
  </div>
</div>